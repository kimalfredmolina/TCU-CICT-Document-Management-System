@page
@model Document_Management_System.Pages.AdminPage.LoginModel
@{
    ViewData["Title"] = "Admin Login";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Login - Document Management System</title>
    <link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
</head>
<body>
    <div class="login-container">
        <h1>Admin Login</h1>
        <form method="post" class="login-form">
            <div class="form-group">
                <label for="username">Username:</label>
                <input type="text" id="username" asp-for="Input.Username" placeholder="Enter your username" required />
                <span asp-validation-for="Input.Username" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="password">Password:</label>
                <input type="password" id="password" asp-for="Input.Password" placeholder="Enter your password" required />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <button type="submit" class="btn-login">Login</button>
        </form>
        <a href="/Index" class="back-link">Back to Home</a>
    </div>
</body>
</html>