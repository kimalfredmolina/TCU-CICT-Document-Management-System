@page
@model Document_Management_System.Pages.AdminPage.AdminDashboardModel
@{
    ViewData["Title"] = "Admin dashboard";
    Layout = "_LayoutDashboard";
}

<h2 class="section-title">Dashboard Overview</h2>

<!-- Stats Cards -->
<div class="stats-cards">
    <div class="card">
        <div class="card-header">
            <i class="fas fa-file-alt"></i> Documents
        </div>
        <div class="card-body">
            <h3 class="card-title">100</h3>
            <p class="card-text">Total Documents</p>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <i class="fas fa-users"></i> Users
        </div>
        <div class="card-body">
            <h3 class="card-title">20</h3>
            <p class="card-text">Active Users</p>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <i class="fas fa-users"></i> Users
        </div>
        <div class="card-body">
            <h3 class="card-title">2</h3>
            <p class="card-text">Inactive Users</p>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <i class="fas fa-star"></i> Starred
        </div>
        <div class="card-body">
            <h3 class="card-title">5</h3>
            <p class="card-text">Starred Items</p>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <i class="fas fa-history"></i> Recent
        </div>
        <div class="card-body">
            <h3 class="card-title">25</h3>
            <p class="card-text">Recently Accessed</p>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <i class="fas fa-tasks"></i> Assigned Tasks
        </div>
        <div class="card-body">
            <h3 class="card-title">2</h3>
            <p class="card-text">Total Tasks Assigned</p>
        </div>
    </div>
</div>

<!-- Charts Section -->
<div class="charts-section">
    <div class="chart-card">
        <div class="card-header">
            <i class="fas fa-chart-bar"></i> Document Uploads (Monthly)
        </div>
        <div class="card-body">
            <canvas id="documentChart" width="400" height="200"></canvas>
        </div>
    </div>

    <div class="chart-card">
        <div class="card-header">
            <i class="fas fa-chart-line"></i> User Activity (Weekly)
        </div>
        <div class="card-body">
            <canvas id="activityChart" width="400" height="200"></canvas>
        </div>
    </div>
</div>

<div class="charts-section">
    <div class="chart-card">
        <div class="card-header">
            <i class="fas fa-tasks"></i> Task Completion Status
        </div>
        <div class="card-body">
            <canvas id="taskCompletionChart" width="50" height="50"></canvas>
        </div>
    </div>
    <!-- Task Progress -->
    <div class="chart-card">
        <div class="card-header">
            <i class="fas fa-tasks"></i> Task Progress
        </div>
        <div class="card-body">
            <div class="task-progress">
                <p class="task-text">Task 1: Thesis Review</p>
                <div class="progress">
                    <div class="progress-bar" style="width: 75%;">75%</div>
                </div>
            </div>
            <div class="task-progress">
                <p class="task-text">Task 2: Department Document Submission</p>
                <div class="progress">
                    <div class="progress-bar" style="width: 40%;">40%</div>
                </div>
            </div>
        </div>
    </div>
</div>