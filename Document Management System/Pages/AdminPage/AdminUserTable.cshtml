@page
@model Document_Management_System.Pages.AdminPage.AdminUserTable
@{
    ViewData["Title"] = "Admin User Table";
    Layout = "_LayoutDashboard";
}

<!-- Bootstrap CSS -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
<!-- Font Awesome Icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
<!-- Bootstrap Table CSS -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-table@1.24.1/dist/bootstrap-table.min.css">

<style>
    .search-container {
        margin-bottom: 1px;
        display: flex;
        gap: 10px;
        max-width: 500px;
        max-height: 45px;
    }

    #documentTable {
        width: 100%;
        margin-top: 20px;
    }

    .action-btn {
        margin: 0 5px;
        cursor: pointer;
    }

    .fixed-table-toolbar .search-input {
        display: none;
    }
</style>

<div class="container-fluid">
    <h2>Users Table</h2>

    <div class="search-container">
        <form method="get" class="d-flex">
            <input type="text" name="SearchQuery" value="@Model.SearchQuery"
                   placeholder="Search Name, or Email" class="form-control me-2" />
            <button type="submit" class="btn btn-primary">Search</button>
        </form>
    </div>

    <table id="documentTable"
           data-toggle="table"
           data-pagination="true"
           data-page-size="10"
           data-search="false">
        <thead>
            <tr>
                <th data-field="fullName" data-sortable="true">Name</th>
                <th data-field="email" data-sortable="true">Email</th>
                <th data-field="phoneNumber" data-sortable="true">Cellphone no.#</th>
                <th data-field="dateCreated" data-sortable="true">Date Created</th>
                <th data-field="userName" data-sortable="true">Username</th>
                <th data-field="actions">Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.UsersList != null && Model.UsersList.Any())
            {
                foreach (var user in Model.UsersList)
                {
                    <tr>
                        <td>@user.fullName</td>
                        <td>@user.Email</td>
                        <td>@user.PhoneNumber</td>
                        <td>@(user.LockoutEnd?.DateTime.ToString("MM/dd/yyyy") ?? "N/A")</td>
                        <td>@user.UserName</td>
                        <td>
                            <a asp-page="/AdminPage/AdminViewUser" asp-route-id="@user.Id" class="action-btn view-btn">
                                <i class="fas fa-eye"></i>
                            </a>
                            <i class="fas fa-edit action-btn edit-btn" data-userid="@user.Id"></i>
                            <i class="fas fa-trash action-btn delete-btn" data-userid="@user.Id"></i>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="7">No users found.</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Scripts -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap-table@1.24.1/dist/bootstrap-table.min.js"></script>

<script>
    $(function() {
        $('#documentTable').bootstrapTable({
            search: false,
            sortable: true,
            pagination: true,
            pageSize: 10
        });

        // Edit and Delete handlers remain the same
        // View functionality is now handled by the anchor tag navigation
    });
</script>