@page
@model Document_Management_System.Pages.AdminPage.AdminMallModel
@{
    ViewData["Title"] = "Admin manage all users";
    Layout = "_LayoutDashboard";
}

<!-- Bootstrap CSS -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
<!-- Font Awesome Icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
<!-- Bootstrap Table CSS -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-table@1.24.1/dist/bootstrap-table.min.css">

<style>
    /* Your original styles plus enhancements */
    .search-container {
        margin-bottom: 1px;
        display: flex;
        gap: 10px;
        max-width: 500px;
        max-height: 45px;
    }
    /* Keep your original table styling */
    #documentTable {
        width: 100%;
        margin-top: 20px;
    }
    /* Action buttons styling */
    .action-btn {
        margin: 0 5px;
        cursor: pointer;
    }
    /* Bootstrap Table overrides */
    .fixed-table-toolbar .search-input {
        display: none; /* Hide the Bootstrap Table search box */
    }

    
</style>

<div class="container-fluid">
    <h2>Manage All Users</h2>

    <!-- Only your original search box remains -->
    <div class="search-container">
        <form method="get" class="d-flex">
            <input type="text" name="SearchQuery" value="@Model.SearchQuery"
                   placeholder="Search Name, or Email" class="form-control me-2" />
            <button type="submit" class="btn btn-primary">Search</button>
        </form>
    </div>

    <!-- Your original table with Bootstrap Table enhancements -->
    <table id="documentTable"
           data-toggle="table"
           data-pagination="true"
           data-page-size="10"
           data-search="false">
        <!-- Disable Bootstrap Table's search -->
        <thead>
            <tr>
                <th data-field="fullName" data-sortable="true">Name</th>
                <th data-field="email" data-sortable="true">Email</th>
                <th data-field="phoneNumber" data-sortable="true">Cellphone no.#</th>
                <th data-field="dateCreated" data-sortable="true">Date Created</th>
                <th data-field="userName" data-sortable="true">Username</th>
                <th data-field="actions">Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.UsersList != null && Model.UsersList.Any())
            {
                foreach (var user in Model.UsersList)
                {
                    <tr>
                        <td>@user.fullName</td>
                        <td>@user.Email</td>
                        <td>@user.PhoneNumber</td>
                        <td>@(user.LockoutEnd?.DateTime.ToString("MM/dd/yyyy") ?? "N/A")</td>
                        <td>@user.UserName</td>
                        <td>
                            <i class="fas fa-eye action-btn view-btn" data-userid="@user.Id"></i>
                            <i class="fas fa-edit action-btn edit-btn" data-userid="@user.Id"></i>
                            <i class="fas fa-trash action-btn delete-btn" data-userid="@user.Id"></i>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="7">No users found.</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- View User Modal -->
<div class="modal fade" id="viewUserModal" tabindex="-1" aria-hidden="true">
    <!-- Modal content remains the same -->
</div>

<!-- Scripts -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap-table@1.24.1/dist/bootstrap-table.min.js"></script>

<script>
    $(function() {
        // Initialize Bootstrap Table with only sorting and pagination
        $('#documentTable').bootstrapTable({
            search: false, // Disable the built-in search
            sortable: true,
            pagination: true,
            pageSize: 10
        });

        // Action button handlers
        $(document).on('click', '.view-btn', function() {
            const userId = $(this).data('userid');
            // Here you would typically fetch the user details
            $('#viewUserId').val(userId);
            $('#viewFullName').val($(this).closest('tr').find('td:eq(1)').text());
            $('#viewEmail').val($(this).closest('tr').find('td:eq(2)').text());
            $('#viewUserModal').modal('show');
        });

        // Edit and Delete handlers remain the same
    });
</script>