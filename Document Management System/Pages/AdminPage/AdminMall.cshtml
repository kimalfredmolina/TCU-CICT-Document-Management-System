@page
@model Document_Management_System.Pages.AdminPage.AdminMallModel
@{
    ViewData["Title"] = "Admin manage all users";
    Layout = "_LayoutDashboard";
}

<h2>Manage All Users</h2>

<div class="search-container">
    <form method="get">
        <input type="text" name="SearchQuery" value="@Model.SearchQuery" placeholder="Search by ID, Name, or Email" />
        <button type="submit">Search</button>
    </form>
</div>

<table id="documentTable">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Email</th>
            <th>Cellphone no.#</th>
            <th>Date Created</th>
            <th>Username</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.UsersList != null && Model.UsersList.Any())
        {
            foreach (var user in Model.UsersList)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.fullName</td>
                    <td>@user.Email</td>
                    <td>@user.PhoneNumber</td>
                    <td>@user.LockoutEnd?.DateTime.ToString("MM/dd/yyyy") ?? "N/A"</td>
                    <td>@user.UserName</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="6">No users found.</td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script src="~/js/docuTable.js"></script>
}
