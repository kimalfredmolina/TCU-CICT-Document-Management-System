@page
@model Document_Management_System.Pages.AdminPage.AdminMnewModel
@{
    ViewData["Title"] = "Admin Add New User";
    Layout = "_LayoutDashboard";
}

<div class="add-user-form bg-white shadow-lg p-5 rounded mx-auto" style="width: 600px;">
    <!-- Increased width -->
    <div class="form-header text-center mb-4">
        <h2 class="font-weight-bold">Add User</h2>
    </div>

    <!-- Centered Profile Image -->
    <div class="d-flex flex-column align-items-center mb-4">
        <img id="profileImage" src="placeholder.png" alt="Profile Image"
             class="rounded-circle mb-3"
             style="width: 140px; height: 140px; object-fit: cover; border: 2px solid #dee2e6;" />
        <label for="fileInput" class="btn btn-primary px-4">
            Browse
            <input type="file" id="fileInput" accept="image/*" style="display: none;" onchange="previewImage(event)" />
        </label>
    </div>

    <form method="post">
        <div class="user-details">
            <h4 class="mb-4 text-center">User Details:</h4>

            <!-- Full Name -->
            <div class="form-group mb-4">
                <label asp-for="Input.FullName" class="form-label fw-bold">
                    <i class="fas fa-user me-2"></i>Full Name
                </label>
                <input asp-for="Input.FullName" class="form-control form-control-lg" placeholder="Enter full name" />
                <span asp-validation-for="Input.FullName" class="text-danger small d-block mt-2"></span>
            </div>

            <!-- Email -->
            <div class="form-group mb-4">
                <label asp-for="Input.Email" class="form-label fw-bold">
                    <i class="fas fa-envelope me-2"></i>Email
                </label>
                <input asp-for="Input.Email" class="form-control form-control-lg" placeholder="Enter email" />
                <div class="mt-2">
                    <span asp-validation-for="Input.Email" class="text-danger small"></span>
                </div>
            </div>

            <!-- Phone Number -->
            <div class="form-group mb-4">
                <label asp-for="Input.PhoneNumber" class="form-label fw-bold">
                    <i class="fas fa-phone me-2"></i>Phone Number
                </label>
                <input asp-for="Input.PhoneNumber" class="form-control form-control-lg" placeholder="Enter phone number" />
                <div class="mt-2">
                    <span asp-validation-for="Input.PhoneNumber" class="text-danger small"></span>
                </div>
            </div>

            <!-- Password -->
            <div class="form-group mb-4">
                <label asp-for="Input.Password" class="form-label fw-bold">
                    <i class="fas fa-key me-2"></i>Password
                </label>
                <div class="input-group">
                    <input asp-for="Input.Password" type="password" class="form-control form-control-lg" id="password" placeholder="Enter password" />
                    <span class="input-group-text bg-transparent" style="cursor: pointer;">
                        <i class="fas fa-eye toggle-password" data-target="#password"></i>
                    </span>
                </div>
                <div class="mt-2">
                    <span asp-validation-for="Input.Password" class="text-danger small"></span>
                </div>
            </div>

            <!-- Confirm Password -->
            <div class="form-group mb-4">
                <label asp-for="Input.ConfirmPassword" class="form-label fw-bold">
                    <i class="fas fa-key me-2"></i>Retype Password
                </label>
                <div class="input-group">
                    <input asp-for="Input.ConfirmPassword" type="password" class="form-control form-control-lg" id="confirmPassword" placeholder="Confirm password" />
                    <span class="input-group-text bg-transparent" style="cursor: pointer;">
                        <i class="fas fa-eye toggle-password" data-target="#confirmPassword"></i>
                    </span>
                </div>
                <div class="mt-2">
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
                </div>
            </div>
        </div>

        <div class="form-footer">
            <button type="submit" class="save-button">Save</button>
        </div>
    </form>
</div>

@section Scripts {
    <script>
        // Show/Hide Password
        document.querySelectorAll('.toggle-password').forEach(icon => {
            icon.addEventListener('click', function () {
                const target = document.querySelector(this.dataset.target);
                const type = target.type === 'password' ? 'text' : 'password';
                target.type = type;
                this.classList.toggle('fa-eye-slash');
            });
        });

        // Image Preview
        function previewImage(event) {
            const reader = new FileReader();
            reader.onload = function () {
                document.getElementById('profileImage').src = reader.result;
            };
            reader.readAsDataURL(event.target.files[0]);
        }
    </script>
}